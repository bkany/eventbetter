  </div>
  
  <div class="field">
    <%= label_tag 'start_date' %><br />
    <%= time_field_tag 'start_date', @event.start_date %>
  </div>

  <div class="field">
    <%= label_tag 'duration' %><br />
    <%= number_field_tag 'duration', @event.duration %>
  </div>
  
  <div class="field">
    <%= label_tag 'price' %><br />
    <%= number_field_tag 'price', @event.price %>
  </div>
  
  <div class="field">
    <%= label_tag 'location' %><br />
    <%= text_field_tag 'location', @event.location %>
  </div>

